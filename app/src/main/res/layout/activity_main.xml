<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/front"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="2dp"
        android:text="NO BULLSHIT"
        android:textColor="@color/yel"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:text=" NO EXCUSES "
        android:textColor="@color/yel"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  KEEP GOING!"
        android:textColor="@color/yel"
        android:textSize="40dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnstart"
        android:layout_width="101dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        android:background="@drawable/rippleeffect"
        android:text="START"
        android:textColor="@color/yel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="top"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnbmi"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ripple3"
            android:text="BMI"
            android:textColor="@color/yel" />

        <Button
            android:id="@+id/btnhistory"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ripple2"
            android:text="History"
            android:textColor="@color/yel" />


    </LinearLayout>


</LinearLayout>

